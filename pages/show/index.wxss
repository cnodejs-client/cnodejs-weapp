/* pages/show/index.wxss */
@import "../../wemark/wemark.wxss";

.topic {
  box-sizing: border-box;
  width: 100%;
  padding: 0 10px 20px;
}

.title {
  color: #000;
  font-size: 20px;
}

.wemark_wrapper {
  font-size: 14px;
  line-height: 1.618;
  color: #3a3a3a;
}

.wemark_block_code {
  white-space: pre-wrap;
}

.replys {
  width: 100%;
  margin-top: 10px;
  background: #ebebeb;
}

.replys-title {
  padding: 30px 10px 10px;
}

.avatar {
  width: 32px;
  height: 32px;
}

.reply-content-wrap {
  flex: 1;
  padding: 8px 10px 10px 0;
}

.loginname-wrap {
  color: #666;
  justify-content: space-between;
}

.like {
  background: url('data:image/png;base64,') no-repeat 0 1px;
  background-size: 16px 16px;
  padding-left: 20px;
}

.reply-content {
  margin: 5px 0;
}

.reply-time {
  font-size: 12px;
}
