page {
  height: 100%;
}

.tab {
  flex-direction: row;
  width: 100%;
}

.tab-item {
  width: 20%;
  padding: 12px 0;
  text-align: center;
  color: #636363;
}

.tab-item-hover {
  color: #a2a2a2;
}

.tab-item-active {
  color: #1aad19;
  border-bottom: solid 2px #1aad19;
  margin-bottom: -1px;
}

.home-scroll {
  overflow-y: auto;
  flex: 1;
}

.topic-item {
  padding: 10px;
  align-items: center;
}

.title-wrap {
  flex: 100%;
  margin-left: 10px;
  align-items: center;
  overflow: hidden;
}

.title {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.timeago {
  width: 100px;
  text-align: right;
}
